<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="72dp"
            android:layout_height="79dp"
            android:background="#FFA500"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"/>

        <TextView
            android:id="@+id/card_view_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_image"
            android:layout_marginLeft="38dp"
            android:layout_toRightOf="@id/card_view_image"
            android:text="textView"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/card_view_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_textview1"
            android:layout_alignStart="@id/card_view_textview1"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="30dp"
            android:maxLines="2"
            android:layout_toRightOf="@id/card_view_image"
            android:text="ticket description"
            android:textColor="@color/white"
            android:ellipsize="end"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="#FFA500"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/button1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="#FFA500"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="#FFA500"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/button3"
            android:layout_alignParentEnd="true"
            android:background="#FFA500"
            android:layout_marginTop="8dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>